<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyQuanCaPhe</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Icons" />
</head>

<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/"
                        class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">Danh mục</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start"
                        id="menu">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index"
                                class="nav-link align-middle px-0 d-flex text-white">
                                <span class="material-icons">home</span>
                                <span class="ms-1 d-none d-sm-inline">Trang chủ</span>
                            </a>
                        </li>
                        <li>
                            <a href="#submenu1" class="nav-link align-middle px-0 d-flex text-white"
                                data-bs-toggle="collapse">
                                <span class="material-icons">account_circle</span>
                                <span class="ms-1 d-none d-sm-inline">Quản lý tài khoản</span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a href="#" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Thêm tài khoản</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Đổi mật khẩu</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Phân quyền tài khoản</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#submenu2" data-bs-toggle="collapse"
                                class="nav-link px-0 align-middle d-flex text-white">
                                <span class="material-icons">diversity_3</span>
                                <span class="ms-1 d-none d-sm-inline">Quản lý nhân viên</span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="submenu2" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a href="#" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Thêm nhân viên</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Xóa nhân viên</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Sửa nhân viên</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Danh sách nhân viên</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#submenu3" data-bs-toggle="collapse"
                                class="nav-link px-0 align-middle d-flex text-white">
                                <span class="material-icons">
                                    local_cafe
                                </span>
                                <span class="ms-1 d-none d-sm-inline">Quản lý sản phẩm</span>
                            </a>
                            <ul class="collapse show nav flex-column ms-1" id="submenu3" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a asp-controller="SanPham" asp-action="Create" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Thêm sản phẩm</span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="SanPham" asp-action="Index" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Hiện dang sách sản phẩm</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#submenu7" data-bs-toggle="collapse"
                                class="nav-link px-0 align-middle d-flex text-white">
                                <span class="material-icons">
                                    local_cafe
                                </span>
                                <span class="ms-1 d-none d-sm-inline">Quản lý công thức</span>
                            </a>
                            <ul class="collapse show nav flex-column ms-1" id="submenu7" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a asp-controller="CongThuc" asp-action="Create" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Thêm công thức</span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="CongThuc" asp-action="Index" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Hiện dang sách công thức</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#submenu4" data-bs-toggle="collapse"
                                class="nav-link px-0 align-middle d-flex text-white">
                                <span class="material-icons">diversity_3</span>
                                <span class="ms-1 d-none d-sm-inline">Quản lý nguyên liệu</span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="submenu4" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a href="#" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Thêm Nguyên liệu</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Xóa nguyên liệu</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Sửa nguyên liệu</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#submenu5" data-bs-toggle="collapse"
                                class="nav-link px-0 align-middle d-flex text-white">
                                <span class="material-icons">group</span>
                                <span class="ms-1 d-none d-sm-inline">Quản lý khách hàng</span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="submenu5" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a href="#" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Thêm khách hàng</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Danh sách khách hàng</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#submenu6" data-bs-toggle="collapse"
                                class="nav-link px-0 align-middle d-flex text-white">
                                <span class="material-icons">receipt_long</span>
                                <span class="ms-1 d-none d-sm-inline">Quản lý hóa đơn</span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="submenu6" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a href="#" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Thêm hóa đơn</span>
                                    </a>
                                </li>
                                <li class="w-100">
                                    <a href="#" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Sửa hóa đơn</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Xóa hóa đơn</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="nav-link px-0 text-white">
                                        <span class="d-none d-sm-inline">--- Báo cáo doanh thu</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <hr>
                    <div class="dropdown pb-4">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
                            id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://github.com/mdo.png" alt="hugenerd" width="30" height="30"
                                class="rounded-circle">
                            <span class="d-none d-sm-inline mx-1">Peid</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                            <li><a class="dropdown-item" href="#">Thông tin cá nhân</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col py-3">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
